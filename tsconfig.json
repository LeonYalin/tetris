{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "composite": true,
    "declaration": true,
    "paths": {
      "@tetris-game/client": ["packages/client/src"],
      "@tetris-game/client/*": ["packages/client/src/*"],
      "@tetris-game/server": ["packages/server/src"],
      "@tetris-game/server/*": ["packages/server/src/*"],
      "@tetris-game/lib": ["packages/lib/src"],
      "@tetris-game/lib/*": ["packages/lib/src/*"],
    }
  }
}