{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "declaration": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@client": ["packages/client/src"],
      "@client/*": ["packages/client/src/*"],
      "@server": ["packages/server/pages/src"],
      "@server/*": ["packages/server/pages/src/*"],
      "@lib": ["packages/lib/src"],
      "@lib/*": ["packages/lib/src/*"],
      "@api": ["packages/api/src"],
      "@api/*": ["packages/api/src/*"],
    }
  }
}