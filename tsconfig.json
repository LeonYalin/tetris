{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "composite": true,
    "declaration": true,
    "paths": {
      "@client": ["packages/client/src"],
      "@client/*": ["packages/client/src/*"],
      "@server": ["packages/server/src"],
      "@server/*": ["packages/server/src/*"],
      "@lib": ["packages/lib/src"],
      "@lib/*": ["packages/lib/src/*"],
    }
  }
}